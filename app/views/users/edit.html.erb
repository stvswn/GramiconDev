<%= form_for @user, :html => {  :multipart => true, :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, 'Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, 'Zip Code', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip_code, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dob, 'Date of Birth', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :dob, { :default => 20.years.ago, :start_year => 1908, :end_year => Time.now.year }, :class => 'span1' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, 'Gender', :class => 'control-label' %>
    <div class="controls">
      <%= f.select :gender, [['Male','m'],['Female','f']] , :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :picture, 'Profile Picture', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :picture %>
      <% if @user.picture.file? %>
        <%= image_tag @user.picture.url(:tiny) %>
        <label class="inline">
          <%= f.check_box :delete_picture, :label => 'Remove Picture' %>
           Remove Picture
        </label>
      <% end %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Save", :class => 'btn btn-primary' %>
    or <%= link_to t('.cancel', :default => t("helpers.links.cancel")), "/" %>
  </div>
<% end %>
