<%- model_class = @message.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= model_class.human_attribute_name(:body) %>:</dt>
  <dd><%= @message.body %></dd>
  <dt><%= model_class.human_attribute_name(:sender_id) %>:</dt>
  <dd><%= @message.sender_id %></dd>
  <dt><%= model_class.human_attribute_name(:recipient_id) %>:</dt>
  <dd><%= @message.recipient_id %></dd>
  <dt><%= model_class.human_attribute_name(:thread_id) %>:</dt>
  <dd><%= @message.thread_id %></dd>
  <dt><%= model_class.human_attribute_name(:folder_id) %>:</dt>
  <dd><%= @message.folder_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              messages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_message_path(@message), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              message_path(@message),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
